<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_dialog_show_copy_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/len_20"
        android:layout_marginTop="@dimen/len_20"
        android:text="@string/modify_password"
        android:textColor="@color/black_alpha_160"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"/>
    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/old_password_dialog_modify_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/len_20"
        android:layout_marginStart="@dimen/len_20"
        android:hint="@string/input_origin_password"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimary"
        app:gLineColor="@color/colorPrimary"/>

    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/password_dialog_modify_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/len_20"
        android:layout_marginStart="@dimen/len_20"
        android:hint="@string/input_password"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimary"
        app:gLineColor="@color/colorPrimary"/>

    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/again_password_dialog_modify_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/len_20"
        android:layout_marginStart="@dimen/len_20"
        android:hint="@string/again_input_password"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimary"
        app:gLineColor="@color/colorPrimary"/>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_dialog_modify_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/len_20"
        android:layout_marginEnd="@dimen/len_20"
        android:layout_marginStart="@dimen/len_20"
        android:layout_marginTop="@dimen/len_20"
        android:padding="@dimen/len_10"
        android:text="@string/ok"
        android:textColor="@color/white"
        app:qmui_backgroundColor="@color/colorPrimary"
        app:qmui_borderColor="@color/colorPrimary"
        app:qmui_radius="@dimen/len_6"/>
</LinearLayout>