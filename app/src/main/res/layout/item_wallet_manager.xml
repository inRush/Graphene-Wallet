<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/qmui_config_color_background"
    android:padding="@dimen/len_10">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:qmui_backgroundColor="@color/white"
        app:qmui_radius="@dimen/len_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_wallet_manager_item"
                android:layout_width="@dimen/len_48"
                android:layout_height="@dimen/len_48"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/len_20"
                tools:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/name_wallet_manager_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="@dimen/font_16"
                tools:text="inrush"/>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/back_btn_wallet_manager_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/len_20"
                android:padding="@dimen/len_2"
                android:paddingEnd="@dimen/len_6"
                android:paddingStart="@dimen/len_6"
                android:text="@string/please_backup"
                android:textSize="@dimen/font_12"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/len_10"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="@dimen/len_10"
            android:layout_marginStart="@dimen/len_10"
            android:background="@color/black_alpha_32"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gxs_count_wallet_manager_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/len_6"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="@dimen/font_20"
                tools:text="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/len_10"
                android:layout_marginTop="@dimen/len_2"
                android:text="@string/gxs"
                android:textColor="@color/black_alpha_96"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
</FrameLayout>