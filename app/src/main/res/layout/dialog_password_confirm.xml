<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/len_10"
        android:text="@string/please_input_password"
        android:textSize="@dimen/font_18"/>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/len_10"
        app:qmui_borderColor="@color/black_alpha_16"
        app:qmui_borderWidth="1dp"
        app:qmui_radius="@dimen/len_6">

        <EditText
            android:id="@+id/password_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/input_password"
            android:inputType="textPassword"
            android:padding="@dimen/len_10"/>
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundFrameLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/confirm_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/len_20"
        android:layout_marginEnd="@dimen/len_20"
        android:layout_marginStart="@dimen/len_20"
        android:layout_marginTop="@dimen/len_20"
        android:padding="@dimen/len_10"
        app:qmui_radius="@dimen/len_10"
        android:text="@string/ok"
        android:textColor="@color/white"
        app:qmui_backgroundColor="@color/colorPrimary"
        app:qmui_borderColor="@color/colorPrimary"/>
</LinearLayout>